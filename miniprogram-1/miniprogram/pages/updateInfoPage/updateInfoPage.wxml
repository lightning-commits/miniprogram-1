<!--miniprogram/pages/updateInfoPage/updateInfoPage.wxml-->
<view>
  <form catchsubmit="formSubmit" catchreset="formReset">
    <view style="width:90%;margin: 30px 0px 0px 22px;height:47px;">
      <input name="wechatNumber" style="border:1px solid;wxcs_style_border:2rpx solid;height:40px;border-radius: 9px;box-shadow:0px 2px 4px 2px #DDDDDD" placeholder="请输入微信号" value="{{wechatNumber}}"/>
    </view>
    <view class="btn-area">
      <button style="margin: 30rpx 0" type="primary" formType="submit" style="margin:15px 0;border-radius: 23px;">确认</button>
    </view>
  </form>
</view>