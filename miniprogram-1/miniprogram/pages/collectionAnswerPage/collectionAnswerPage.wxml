<!--miniprogram/pages/answer/answer.wxml-->
<view class="page" bindtouchstart="touchstart" bindtouchmove="touchmove" bindtouchend="touchend">
  <view class="line"></view>
    <view class="page_switch">
      <view style="width:30%">
        <text class="page_switch_text">{{questionList[index].ctlIntelligencePractice.isManyQuestion==1?"多项选择":"单项选题"}}</text>
      </view>
      <view style="margin-left:85%;margin-top: -28px;">
        <text style="font-size: 25px;color:#53ab10">{{index+1}}</text>
        <text style="font-size: 20px;">/{{questionSize}}</text>
      </view>
    </view>
    <view class="line_down"></view>
    <view>
      <view class="question_class">
        <text style="color:#2c2c2c">{{questionList[index].ctlIntelligencePractice.questionName}}</text>
        <text style="color:#8a8a8a">{{questionList[index].ctlIntelligencePractice.bgData}}</text>
      </view>
    </view>
    <!--答题块-->
    <view>
      <radio-group class="radio-group" bindchange="radioChange" wx:if="{{questionList[index].ctlIntelligencePractice.isManyQuestion==0}}">
          <label class="radio my-choosebox" wx:for="{{questionList[index].ctlChoices}}" >
            <text>\n</text>
            <radio value="{{item.answerTitle}}" checked="{{item.checked}}"></radio>{{item.answerTitle}}、{{item.questionAnswer}}
            <text>\n</text>
          </label>
      </radio-group>
      <checkbox-group bindchange="checkboxChange" class="checkbox-group" wx:else>
        <label class="checkbox my-choosebox" wx:for="{{questionList[index].ctlChoices}}">
          <text>\n</text>
          <checkbox value="{{item.answerTitle}}" checked="{{item.checked}}"></checkbox>{{item.answerTitle}}、{{item.questionAnswer}}
          <text>\n</text>
        </label>
      </checkbox-group>
    </view>
    <!--客户答案，实际答案-->
    <view class="answer_class" wx:if="{{chooseValue.length > 0}}">
      <view>
        <text style="color:red">您的答案为 {{chooseValue[wrongList]}}</text>
      </view>
      <view style="margin: -23px 0px 0px 170px;">
        <text style="color:#5aa61a">正确答案为 {{questionList[wrongList]['trueAnswer']}}</text>
      </view>
    </view>
    <!--题目解析-->
    <view wx:if="{{chooseValue.length > 0}}">
      <view style="margin: 20px 0px 0px 30px;"><text style="color:#8a8a8a">解析</text></view>
      <view style="margin: 15px 0px 0px 60px;">
        <text>{{questionList[wrongList].ctlIntelligencePractice.analysis}}</text>
      </view>
    </view>
    
    <!--收藏,计时等按钮-->
    <view style="margin:-30px 0px 0px 230px;width:100%;position:fixed;bottom:10px;" >
      <view style="width:100%;height:1px;background:#cdcdcd;margin-left:-230px;margin-top: -20px;"></view>
      <view style="margin-left: -100px;float:left">
        <image src="{{collectionUrl}}" bindtap="clickCollection" style="height:30px;width: 30px;" ></image>
      </view>
      <view style="margin-top: 20px;">
          <!-- <image src="../../images/share.png" style="height:30px;width:30px"></image> -->
          <button size="mini"  open-type="share">
            <image src="../../images/share.png" style="height:30px;width:30px;margin-left:-12px"></image>
          </button>
      </view>
    </view>
</view>
