/* miniprogram/pages/teamPage/teamPage.wxss */
.nav_logo{
  display: relative;
flex-direction: column;
align-items: center;
height: 300rpx;
}
.nav_logo::after{
  content: '';
  width: 100%;
  height: 300rpx;
  position: absolute;
  z-index: -1;
  left: 0%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: linear-gradient(160deg,rgb(111,206,41), rgb(111,206,41));
}
.team_bg{
  background: #f0eded;
  width: 90%;
  margin: 0px 0px 0px 25px;
  border-radius: 10px 10px 0px 0px;
  height:100px;
}
.invitation_class{
  background:#eddfc5;
  width: 90%;
  margin:0px 0px 0px 25px;
  border-radius: 0px 0px 10px 10px;
  height: 60px;
}
.myself_invitation{
  background:#eddfc5;
  width: 90%;
  margin:52rpx 0rpx 0rpx 60rpx;
  border-radius: 10px;
  height: 50px;
}
.avatar{
  height: 30px;
  width: 30px;
  border-radius: 25px;
  margin-top: 5px;
}
.tab_list{
  width:25%;
  float: left;
  text-align:center;
  line-height:86rpx;
  font-size:30rpx;
  margin-right:26rpx;
}
.on{
  color: #6ca10a;
  border-bottom: 2px solid #6ca10a;
  font-weight: bold;
}
.scroll_view{
  width:100%;
  margin: 10px 0px 0px 0px;
  height:200rpx;
  white-space: nowrap;
  overflow: hidden;
}
.team_avatar{
  
  height: 30px;
  width: 30px;
  border-radius: 25px;
  margin-top: 16px;
}
.team_invitation{
  background:#eddfc5;
  width: 90%;
  margin:62px 0px 0px 25px;
  border-radius: 10px;
  height: 68px;
}